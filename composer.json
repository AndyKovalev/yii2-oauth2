{
    "name": "sweelix/yii2-oauth2-server",
    "description": "PHP 5.6+ Oauth2 server integration for the Yii framework",
    "keywords": ["yii2", "oauth2", "server", "authorization"],
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Philippe Gaultier",
            "email": "pgaultier@gmail.com"
        }
    ],
    "require": {
        "yiisoft/yii2": "~2.0",
        "yiisoft/yii2-redis": "2.0.4",
        "bshaffer/oauth2-server-php": "~1.8",
        "yiisoft/yii2-bootstrap": "~2.0",
        "php" : ">=5.6.0"
    },
    "require-dev" : {
        "php" : ">=5.6.0",
        "codeception/codeception": "~2.2"
    },
    "autoload": {
        "psr-4": { "sweelix\\oauth2\\server\\": "src" }
    },
    "extra": {
        "branch-alias": {
            "dev-devel": "1.0.x-dev"
        }
    }
}
